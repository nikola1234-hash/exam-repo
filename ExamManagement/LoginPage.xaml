<Window x:Class="ExamManagement.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Page" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="30">
            <TextBox x:Name="EmailTextBox" Margin="0 0 0 20" TextWrapping="Wrap" Text="Email"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 0 0 20"/>
            <CheckBox x:Name="RememberMeCheckBox" Margin="0 0 0 20" Content="Remember me"/>
            <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
